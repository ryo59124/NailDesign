<div class="container">
<table class='table text-reset'>
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @end_users.each do |end_user| %>
    <% if end_user.name != "Guest" && end_user.name != "guestuser" %>
      <tr>
        <td><%= image_tag end_user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to end_user.name, end_user %></td>
        <td>Follows: <%= end_user.followings.count %></td>
        <td>Followers: <%= end_user.followers.count %></td>
        <% if end_user != current_end_user %>
        <% if current_end_user.name != "Guest" %>
        <td>
          <% if current_end_user.following?(end_user) %>
            <%= link_to "フォロー外す", end_user_relationships_path(end_user.id), method: :delete, class: 'btn btn-info' %>
          <% else %>
            <%= link_to "follow", end_user_relationships_path(end_user.id), method: :post, class: 'btn btn-success' %>
          <% end %>
        </td>
        <td>
          <%= link_to chat_path(end_user.id), class: "text-reset" do %>
            <i class="fas fa-comments"></i> CHAT
          <% end %>
        </td>
        <% end %>
        <% end %>
        </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>