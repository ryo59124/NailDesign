<div class = "container">
<div class="row mt-4 text-center">
  <div class="col"></br>
    <h3>新規登録</h3>
    <%= form_with(model: @end_user, url: registration_path(resource_name) )do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    
      <div class="form-group text-center col-10">
        <%= f.label :"名前", class: "col-3 control-label" %>
        <%= f.text_field :name, autofocus: true, class: "col-4 form-control-static name" %>
      </div>

      <div class="form-group text-center col-10">
        <%= f.label :"メールアドレス", class: "col-3 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-4 form-control-static" %>
      </div>

      <div class="form-group text-center col-10">
        <%= f.label :"パスワード(6文字以上)", class: "col-3 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-4 form-control-static" %>
      </div>
      <div class="form-group text-center col-10">
        <%= f.label :"パスワード(確認用)", class: "col-3 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-4 form-control-static" %>
      </div>
      
      <div class="actions">
        <%= f.submit "Sign up !", class:"btn text-reset border-dark", style:"background-color:#ffc0cd;"%>
      </div></br>
      <% end %>

    <div class="col-xs-3 mt-5">
      <h4>会員の方</h4>
      <p class="new-link mt-4">
        <%= link_to "こちら", new_session_path(resource_name), data: {"turbolinks" => false}, class: "btn-link" %>からログインできます
      </p>
      <p>
        <%= link_to "Guest", guests_guest_sign_in_path, method: :post, class: "btn-link" %>としてご覧いただくことも可能です
      </p>
    </div>
  </div>
</div>
</div>