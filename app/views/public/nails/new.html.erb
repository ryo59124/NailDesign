<div class='container'>
  <div class='row'>
    <div class="col-lg-4 mt-5 px-5 px-sm-0 mx-auto">
      <h1>New Nail Post</h1>
      <div class="row ml-2">
        <%= form_with model: @nail do |f| %>
        <h4>Image</h4>
          <%= f.file_field :image, accept: "image/*" %>
        <h4 class="mt-2">Title</h4>
          <%= f.text_field :title %>
        <h4>Body</h4>
          <%= f.text_area :body %></br></br>
        <%= f.submit 'Post!!', class:"btn text-reset border-dark", style:"background-color:#ffc0cd;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>