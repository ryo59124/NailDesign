<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 mt-5 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Edit Nail Infomation</h2>
    <%= form_with model: @nail, local:true do |f| %>
    <%= render 'layouts/errors', obj: @nail %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control title" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :mage, class: "form-control-file image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control body" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
    </div>
  </div>
</div>