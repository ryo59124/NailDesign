<div class= "container text-reset">
  <div class="row">
    <div class="col" style="margin-top:25px; margin-bottom:200px;"></br>

      <h3 class="head-line title_h3 text-center">管理者ログイン</h3></br>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group text-center col-10">
        <%= f.label :"メールアドレス", class: "col-3 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-4 form-control-static" %>
      </div>
      <div class="form-group text-center col-10">
        <%= f.label :"パスワード", class: "col-3 control-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-4 form-control-static" %>
      </div>

      <div class="actions text-center">
      <%= f.submit "ログイン", class:"btn text-reset border-dark", style:"background-color:#ffc0cd;"%>
      </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
